<Page x:Class="Projekt_ProgramowanieO.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Projekt_ProgramowanieO"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <Frame x:Name="MainFrame"/>
        <StackPanel VerticalAlignment="Center">
            
            <StackPanel>
                <TextBlock TextAlignment="Center" HorizontalAlignment="Center" Width="200" Height="37" FontSize="20" Margin="0 0 0 10" Foreground="#3C4AE6">Login</TextBlock>
                <TextBox x:Name="LoginTxt" TextWrapping="Wrap" Text="Type your login..." Width="200" Height="30" FontSize="20"/>
            </StackPanel>

            <StackPanel>
                <Label   HorizontalAlignment="Center" Width="200" Height="37" FontSize="20" Margin="0 0 0 5" Foreground="#3C4AE6">Password</Label>
                <PasswordBox x:Name="PasswordTxt"   Width="200" Height="30" FontSize="20"/>
            </StackPanel>
            
                <Button x:Name="LoginBtn" Content="Login" Margin="0 20 0 0" HorizontalAlignment="Center"  VerticalAlignment="Center" Height="45" Width="86" Click="LoginBtn_2" />
            
        </StackPanel>
    </Grid>
</Page>
